{
  "name": "@parcelguard/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "rm -f ./data/parcelguard.db && npm run db:seed"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "nanoid": "^5.0.6"
  },
  "devDependencies": {
    "@parcelguard/shared": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  }
}
